{
    "segments": {
        "right": [
            {
                "function": "powerline.segments.common.players.mpd",
                "name": "player",
                "args": {
                    "state_symbols": {
                        "fallback": "",
                        "play":     "",
                        "pause":    "",
                        "stop":     "",
                        "shuffle":  "",
                        "repeat":   "",
                        "loop":     "",
                        "next":     "",
                        "previous": ""
                    },
                    "format": "{state_symbol} {album} - {title} ({elapsed})",
                    "short_format": "{state_symbol} {title} ({elapsed})"
                }
            },
            {
                "function": "powerline.segments.common.sys.temp"
            },
            {
                "function": "powerline.segments.common.sys.cpu_load_percent",
                "args" : {
                    "format" : "{0:3.0f}%"
                }
            },
            {
                "function": "powerline.segments.common.net.wireless",
                "args" : {
                    "device": "wlp5s0",
                    "format": " {quality:4.0%} @ {essid}",
                    "short_format": " {quality:4.0%}"
                }
            },
            {
                "function": "powerline.segments.common.net.internal_ip",
                "before" : "W ",
                "args" : {
                    "interface" : "wlp5s0"
                }
            },
            {
                "function": "powerline.segments.common.net.internal_ip",
                "before" : "E ",
                "args" : {
                    "interface" : "enp4s0"
                }
            },
            {
                "function": "powerline.segments.common.volume.vol",
                "args": {
                    "format": " {volume:2.0%}",
                    "format_muted": null
                }
            },
            {
                "function":             "powerline.segments.common.bat.battery",
                "draw_soft_divider":    true,
                "args": {
                    "name":             "icon",
                    "icons": {
                        "0":            " ",
                        "25":           " ",
                        "50":           " ",
                        "75":           " ",
                        "100":          " ",
                        "full":         " ",
                        "online":       " "
                    }
                }
            },
            {
                "function": "powerline.segments.common.bat.battery",
                "draw_soft_divider": false,
                "args": {
                    "name": "capacity"
                }
            },
            {
                "function": "powerline.segments.common.bat.battery",
                "draw_soft_divider": true,
                "args": {
                    "name": "rem_time",
                    "bat": 0
                }
            },
        {
                "function": "powerline.segments.common.time.date",
                "args": {
                    "format": "%b %d"
                }
            },
            {
                "function": "powerline.segments.common.time.date",
                "name": "date",
                "args": {
                    "format": "%H:%M",
                    "istime": true
                }
            }
        ],
        "left": [
            {
                 "type": "string",
                 "contents": "",
                 "highlight_groups": [ "level:1" ]
            },
            {
                "function": "powerline.segments.i3wm.mode",
                "args": {
                    "names": {
                        "default": null,
                        "resize": "resize",
                        "gaps": "gaps: (o) outer, (i) inner",
                        "gaps-o": "gaps [outer]",
                        "gaps-i": "gaps [inner]"
                    }
                }
            },
            {
                "function": "powerline.segments.i3wm.workspaces",
                "exclude_modes": [ "default" ],
                "draw_inner_divider": true,
                "draw_soft_divider": true,
                "args": {
                    "only_show": [ "focused", "visible" ],
                    "output": "__all__",
                    "separator": " ",
                    "show_multiple_icons": false,
                    "icons": {
                        "Xfce4-terminal": "",
                        "Termite": "",
                        "Chromium": "",
                        "Steam": "",
                        "jetbrains-idea": "",
                        "jetbrains-pycharm": "",
                        "jetbrains-clion": "",
                        "Gimp": "",
                        "Pavucontrol": "",
                        "Thunderbird": "",
                        "Thunar": "",
                        "Skype": "",
                        "TelegramDesktop": "",
                        "feh": "",
                        "firefox": "",
                        "Evince": "",
                        "Zathura": "",
                        "libreoffice-calc": "",
                        "libreoffice-writer": "",
                        "multiple": ""
                    }
                }
            },
            {
                "function": "powerline.segments.i3wm.workspaces",
                "include_modes": [ "default" ],
                "draw_inner_divider": true,
                "draw_soft_divider": true,
                "args": {
                    "output": "__all__",
                    "separator": " ",
                    "show_multiple_icons": true,
                    "icons": {
                        "Xfce4-terminal": "",
                        "Termite": "",
                        "Chromium": "",
                        "Steam": "",
                        "jetbrains-idea": "",
                        "jetbrains-pycharm": "",
                        "jetbrains-clion": "",
                        "Gimp": "",
                        "Pavucontrol": "",
                        "Thunderbird": "",
                        "Thunar": "",
                        "Skype": "",
                        "TelegramDesktop": "",
                        "feh": "",
                        "firefox": "",
                        "Evince": "",
                        "Zathura": "",
                        "libreoffice-calc": "",
                        "libreoffice-writer": "",
                        "multiple": ""
                    }
                }
            },
            {
                "function": "powerline.segments.i3wm.scratchpad",
                "args": {
                    "icons": {
                        "fresh": "•",
                        "changed": "•"
                    }
                }
            },
            {
                "function": "powerline.segments.i3wm.active_window",
                "draw_inner_divider": true,
                "draw_soft_divider": true,
                "args": {
                    "cutoff": 65
                }
            }
        ]
    }
}
